import java.util.Scanner;

public class HeatEnergy {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Enter the amount of water (kg): ");
        double M = input.nextDouble();

        System.out.print("Enter the initial temperature (°C): ");
        double initialTemp = input.nextDouble();

        System.out.print("Enter the final temperature (°C): ");
        double finalTemp = input.nextDouble();

        double Q = M * (finalTemp - initialTemp) * 4184;
        System.out.printf("Energy needed: %.2f joules%n", Q);
    }
}
